<Window x:Class="I2C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2C"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btnInit" Grid.Row="2" Grid.Column="1" Content="Init" Margin="5,4.889,5,5" Click="btnInit_Click"></Button>
        <Button Name="btnSend" Grid.Row="2" Grid.Column="2" Content="Send" Margin="5,4.889,5,5" Click="btnSend_Click"></Button>
        
        <TextBox Name="txtInput" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"></TextBox>

        <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Name="lblStatus" HorizontalAlignment="Center"></Label>
    </Grid>
</Window>
