<Window x:Class="_01_Ziggy.Maes_LCD_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_Ziggy.Maes_LCD_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnInit" Content="Init" HorizontalAlignment="Left" Margin="290,33,0,0" VerticalAlignment="Top" Width="98" Click="btnInit_Click" Height="40"/>
        <TextBox x:Name="txtinput" HorizontalAlignment="Left" Height="23" Margin="148,160,0,0" TextWrapping="Wrap" Text="Write text..." VerticalAlignment="Top" Width="240"/>
        <Button x:Name="btnWriteLine" Content="Write line" HorizontalAlignment="Left" Margin="209,213,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="-0.066,0.577" Height="40" Click="btnWriteLine_Click"/>
        <RadioButton x:Name="rad4bit" Content="4bits" HorizontalAlignment="Left" Margin="186,33,0,0" VerticalAlignment="Top" GroupName="grpBitMode"/>
        <RadioButton x:Name="rad8bit" Content="8bits" HorizontalAlignment="Left" Margin="186,58,0,0" VerticalAlignment="Top" GroupName="grpBitMode"/>

    </Grid>
</Window>
